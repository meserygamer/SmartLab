<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="16dp"
    android:layout_height="136dp"
    android:padding="16dp"
    android:background="@drawable/activity_main_page_catalog_item_background"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CatalogItemName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="ПЦР-тест на определение РНК коронавируса стандартный"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:lineHeight="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/CatalogItemTimeResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:lineHeight="20dp"
                android:text="2 дня"
                android:textColor="#939396"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CatalogItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CatalogItemTimeResult"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:layout_marginTop="4dp"
                android:lineHeight="24dp"
                android:text="1800 ₽"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AddButton"
                android:layout_width="96dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/activity_main_page_add_to_basket_button_foreground"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textFontWeight="600"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="Добавить"
                android:background="@drawable/activity_main_page_catalog_add_button_background"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>