<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PatientSelection"
    android:paddingHorizontal="20dp"
    android:paddingTop="24dp"
    android:orientation="vertical"
    android:background="@drawable/bottom_fragment_catalog_item_main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textFontWeight="600"
            android:lineHeight="28dp"
            android:text="Адрес сдачи анализов"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bottom_fragment_catalog_item_dismiss_button"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/activity_order_registration_add_participant_button"

        android:text="Добавить пациента"
        android:textColor="#1A6FEE"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_pro_display_regular"
        android:lineHeight="20dp"
        android:textFontWeight="400"
        android:textSize="15sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:enabled="false"
        android:layout_marginBottom="32dp"
        android:background="@drawable/activity_order_registration_buy_button"

        android:text="Подтвердить"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textFontWeight="600"
        android:textSize="17dp"
        android:lineHeight="24dp"
        android:textColor="@color/white"/>

</androidx.appcompat.widget.LinearLayoutCompat>