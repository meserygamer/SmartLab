<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <level-list>

            <item android:maxLevel="0">

                <shape android:shape="rectangle">

                    <corners android:radius="12dp"/>
                    <gradient android:startColor="#76B3FF"
                        android:endColor="#CDE3FF"/>

                </shape>

            </item>

            <item android:maxLevel="1">

                <shape android:shape="rectangle">

                    <corners android:radius="12dp"/>
                    <gradient android:startColor="#92E9D4"
                        android:endColor="#97D9F0"/>

                </shape>

            </item>

            <item android:maxLevel="2">

                <shape android:shape="rectangle">

                    <corners android:radius="12dp"/>
                    <gradient android:startColor="#ff2400"
                        android:endColor="#ff7e00"/>

                </shape>

            </item>

        </level-list>

    </item>

</selector>